<!--displaying the workout-->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">
  <title>XianghanGymProject - Workouts</title>
</head>

<body>
   <%- include('navbar') %>
  <div class="container">
    <br>
    <div class="text-center">
      <h2>Workouts Available at GymReaper</h2>
    </div>
    <br>
    <a class = "addWorkout" href="/addWorkouts">Add new workout</a>
    <table class="table table-hover small text-center">
      <thead>
        <tr class="workoutList">
          <th>Exercise Name</th>
          <th>Muscle Group</th>
          <th>Reps</th>
          <th>Weight(kgs)</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i = 0; i < workouts.length; i++) { %>
          <tr>
            <td><a href="/workouts/<%= workouts[i].workoutId %>"><%= workouts[i].exerciseName %></a></td>
            <td><%= workouts[i].muscleGrp %></td>
            <td><%= workouts[i].reps %></td>
            <td><%= workouts[i].weight %></td>            
            <td><a href="/editWorkouts/<%= workouts[i].workoutId %>">Edit</a></td>
            <td><a href="/deleteWorkouts/<%= workouts[i].workoutId %>"onclick="return confirm('Are you sure you want to delete this workout?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>

</html>
