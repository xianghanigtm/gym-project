<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">
  <title>Edit Session</title>
</head>

<body>
  <%- include('navbar') %>

  <div class="container mt-5">
    <h2>Edit Workout Session</h2>
    <form action="/editSession/<%= session.sessionId %>" method="POST">
      <div class="mb-3">
        <label for="date" class="form-label">Date</label>
        <input type="date" class="form-control" id="date" name="date" value="<%= session.date.toISOString().split('T')[0] %>" required>
      </div>
      <div class="mb-3">
        <label for="duration" class="form-label">Duration (minutes)</label>
        <input type="number" class="form-control" id="duration" name="duration" value="<%= session.duration %>" required>
      </div>
      <div class="mb-3">
        <label for="bodyPart" class="form-label">Body Part</label>
        <select class="form-select" id="bodyPart" name="bodyPart" required>
          <option value="Arms">Arms</option>
          <option value="Legs">Legs</option>
          <option value="Back">Back</option>
          <option value="Chest">Chest</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="exercise" class="form-label">Exercise</label>
        <select class="form-select" id="exercise" name="exercise" required>
          <% workouts.forEach(workout => { %>
            <option value="<%= workout.exerciseName %>"><%= workout.exerciseName %></option>
          <% }); %>
        </select>
      </div>
      <div class="mb-3">
        <label for="food" class="form-label">Food</label>
        <input type="text" class="form-control" id="food" name="food" value="<%= session.food %>" required>
      </div>
      <div class="mb-3">
        <label for="sets" class="form-label">Sets</label>
        <input type="number" class="form-control" id="sets" name="sets" value="<%= session.sets %>" required>
      </div>
      <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
  </div>
</body>

</html>
