<!-- profile.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">
  <title>XianghanGymProject - Profile</title>

</head>

<body>
  <%- include('navbar') %>
  <div class="container">
    <br>
    <div class="text-center">
      <h2>Profiles that you have created</h2>
    </div>
    <br>

    <table class="table table-hover small text-center">
      <thead>
        <tr>
          <th width="100">Profile Name</th>
          <th width="100">Profile Image</th>
          <th width="50">DOB</th>
          <th width="50">Contact</th>
          <th width="50">Email</th>
          <th width="50">Edit</th>
          <th width="50">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < user.length; i++) { %>
          <tr>
            <td><a href="/profile/<%=user[i].userId%>"><%=user[i].name%></a></td>
            <td><img src="images/<%=user[i].image%>" width="50%"></td>
            <td><%= new Date(user[i].dob).toLocaleDateString('en-US',
              { month: 'long', day: 'numeric', year: 'numeric' }); %></td>
            <td><%= user[i].contact %></td>
            <td><%=user[i].email%></td>
            <td><a href="/editProfile/<%= user[i].userId %>">Edit</a></td>
            <td><a href="/deleteProfile/<%= user[i].userId %>"
                onclick="return confirm('Are you sure you want to delete this user?')">Delete</a></td>
          </tr>
          <a href = "/" class = "back">Back</a>
          <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
