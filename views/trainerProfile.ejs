<!-- trainerProfile.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">
  <title>Trainer Profile</title>
</head>

<body>
  <div class="container">
    <br>
    <div class="text-center">
      <h2>Trainer Profile</h2>
    </div>
    <br>

    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <img src="/images/<%= trainer.image %>" class="trainerImage" alt="Trainer Image">
          <div class="card-body">
            <h5 class="card-title"><%= trainer.name %></h5>
            <p class="card-text">Specialization: <%= trainer.specialization %></p>
            <p class="card-text">Contact: <%= trainer.contact %></p>
            <p class="card-text">Age: <%= trainer.age %></p>
            <p class="card-text">Description:</p>
            <p><%= trainer.description %></p>
            <a href="/deleteTrainer/<%= trainer.trainerId %>"
              onclick="return confirm('Are you sure you want to delete this trainer?')" class="btn btn-danger btn-delete">Block</a>
            <a href = "/trainers" class = "back">Back</a>
          </div>
        </div>
      </div>
    </div>

  </div>
</body>

</html>
