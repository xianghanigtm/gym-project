<!-- views/userProfile.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">
  <title>User Profile</title>
</head>

<body>
  <div class="container">
    <br>
    <div class="text-center">
      <h2>User Profile</h2>
    </div>
    <br>

    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <img src="/images/<%= user.image %>" class="trainerImage" alt="User Image">
          <div class="card-body">
            <h5 class="card-title"><%= user.name %></h5>
            <p class="card-text">Contact: <%= user.contact %></p>
            <p class="card-text">Email: <%= user.email %></p>
            <p class="card-text">Date of Birth: <%= new Date(user.dob).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %></p>
            <p><%= user.description %></p>
            <a href="/deleteUser/<%= user.userId %>" onclick="return confirm('Are you sure you want to delete this user?')" class="btn btn-danger btn-delete">Delete</a>
            <a href="/profile" class="back">Back</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>
