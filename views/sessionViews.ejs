<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">
  <title>View Logged Sessions</title>
</head>

<body>
  <%- include('navbar') %>

  <div class="container mt-5">
    <h2>Logged Workout Sessions</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Duration (minutes)</th>
          <th>Body Part</th>
          <th>Exercise</th>
          <th>Food</th>
          <th>Sets</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < sessions.length; i++) { %>
          <tr>
            <td><%= new Date(sessions[i].date).toLocaleDateString('en-US',  
              { month: 'long', day: 'numeric', year: 'numeric' }); %></td>
            <td><%= sessions[i].duration %></td>
            <td><%= sessions[i].bodyPart %></td>
            <td><%= sessions[i].exercise %></td>
            <td><%= sessions[i].food %></td>
            <td><%= sessions[i].sets %></td>
            <td><a href="/editSession/<%= sessions[i].sessionId %>">Edit</a></td>
            <td><a href="/deleteSession/<%= sessions[i].sessionId %>"
              onclick="return confirm('Are you sure you want to delete this session?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>

</html>
